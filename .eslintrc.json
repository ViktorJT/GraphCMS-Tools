{
  "env": {
    "es2021": true,
    "node": true,
    "browser": false,
    "commonjs": false
  },
  "extends": ["prettier", "eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier", "import", "@typescript-eslint"],
  "rules": {
    "no-console": "off",
    // "indent": ["error", "tab"],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
